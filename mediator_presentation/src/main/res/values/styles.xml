<resources>

    <style name="AppTheme.NoToolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="DoneFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/ic_check_red_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="android:tint">@color/colorBlack</item>
        <item name="backgroundTint">@color/colorGreen</item>
    </style>

    <style name="AddFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/ic_add_black_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="android:tint">@color/colorBlack</item>
        <item name="backgroundTint">@color/colorYellow</item>
    </style>
</resources>
